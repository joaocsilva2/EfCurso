@model EfCurso.Models.Funcionario

<h2>Cadastro de Funcionários</h2>

<form asp-controller="Funcionarios" asp-action="Salvar" method="post">
    <input type="hidden" asp-for="Id"/>
    <input class="form-control" type="text" asp-for="Nome" placeholder="Nome" />
    <input class="form-control" type="number" asp-for="Salario" placeholder="Salário" />
    <input class="form-control" type="text" asp-for="Cpf" placeholder="CPF" />
    <button class="btn btn-success">Cadastrar</button>
</form>
